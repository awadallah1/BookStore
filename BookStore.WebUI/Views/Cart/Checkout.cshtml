@model BookStore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "BookStore:CheckOut Now";
 }
<h2>Check out now</h2>
<p>Please enter your details and we will Send your Books Soon</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <h3>Ship To</h3>
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(x=>x.Name,new {@class="form-control" })
    </div>
    <h3>Address</h3>

    //Working with ModelMetadata to do form
    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        if (property.PropertyName!="Name"&&property.PropertyName!="IsGift")
        {
            <div class="form-group">
                <label>@(property.DisplayName??property.PropertyName):</label>
                @Html.TextBox(property.PropertyName,null, new { @class = "form-control" })
            </div>
        }


    }


